 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:subtitle="Grocery"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:subtitleTextColor="#FFFFFF" />
    <!-- Spinner for Categories -->
    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp" />

    <!-- SearchView for Groceries -->
    <androidx.appcompat.widget.SearchView

     android:id="@+id/grocerySearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for groceries" />

    <!-- RecyclerView for Groceries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groceryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Button to View Groceries -->
        <Button
            android:id="@+id/buttonViewGroceries"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="View Groceries" />

        <!-- Button to Add Groceries -->
        <Button
            android:id="@+id/buttonAddGroceries"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Add Groceries" />

        <!-- Button to Transfer to Pantry -->
        <Button
            android:id="@+id/buttonTransferToPantry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Transfer to Pantry" />

    </LinearLayout>
     <!-- Add Groceries Layout -->
     <LinearLayout
         android:id="@+id/addGroceriesLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical"
         android:visibility="gone">

         <EditText
             android:id="@+id/editTextGroceryName"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Grocery Name"
             android:inputType="text" />

         <Button
             android:id="@+id/buttonFinalizeAddGroceries"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Add Grocery" />
     </LinearLayout>
</LinearLayout>

